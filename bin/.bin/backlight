#!/bin/bash

function send_notification {
    brightness=$(xbacklight)
    bar="$(draw_bar $brightness 16)"
    # Send the notification
    dunstify -i display -t 8 -r 2593 -u normal "$bar"
}

case $1 in
    up)
	xbacklight -inc 6.25
	send_notification
	;;
    down)
    xbacklight -dec 6.25
	send_notification
	;;
esac

